{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://cra.dev/schemas/trace-event.schema.json",
  "title": "TRACE Event",
  "description": "Telemetry & Replay Audit Contract for Execution event object",
  "type": "object",
  "required": [
    "trace_version",
    "event_id",
    "trace_id",
    "span_id",
    "session_id",
    "sequence",
    "timestamp",
    "event_type",
    "payload",
    "event_hash",
    "previous_event_hash"
  ],
  "properties": {
    "trace_version": {
      "type": "string",
      "const": "1.0",
      "description": "TRACE protocol version"
    },
    "event_id": {
      "type": "string",
      "format": "uuid",
      "description": "UUIDv7 unique to this event"
    },
    "trace_id": {
      "type": "string",
      "format": "uuid",
      "description": "UUIDv7 grouping related events"
    },
    "span_id": {
      "type": "string",
      "format": "uuid",
      "description": "UUIDv7 for this operation span"
    },
    "parent_span_id": {
      "type": ["string", "null"],
      "format": "uuid",
      "description": "Parent span for nested operations"
    },
    "session_id": {
      "type": "string",
      "format": "uuid",
      "description": "Session this event belongs to"
    },
    "sequence": {
      "type": "integer",
      "minimum": 0,
      "description": "Monotonically increasing sequence number"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 with microsecond precision"
    },
    "event_type": {
      "$ref": "#/$defs/EventType",
      "description": "Type of trace event"
    },
    "payload": {
      "type": "object",
      "description": "Event-specific data"
    },
    "event_hash": {
      "type": "string",
      "pattern": "^[a-f0-9]{64}$",
      "description": "SHA-256 hash of this event"
    },
    "previous_event_hash": {
      "type": "string",
      "pattern": "^[a-f0-9]{64}$",
      "description": "SHA-256 hash of preceding event"
    }
  },
  "$defs": {
    "EventType": {
      "type": "string",
      "enum": [
        "session.started",
        "session.ended",
        "carp.request.received",
        "carp.resolution.completed",
        "carp.resolution.cached",
        "action.requested",
        "action.approved",
        "action.denied",
        "action.executed",
        "action.failed",
        "policy.evaluated",
        "policy.violated",
        "context.injected",
        "context.redacted",
        "error.occurred"
      ],
      "description": "Standard TRACE event types"
    },
    "SessionStartedPayload": {
      "type": "object",
      "required": ["agent_id", "goal"],
      "properties": {
        "agent_id": { "type": "string" },
        "goal": { "type": "string" },
        "atlas_ids": {
          "type": "array",
          "items": { "type": "string" }
        },
        "metadata": { "type": "object" }
      }
    },
    "SessionEndedPayload": {
      "type": "object",
      "required": ["reason", "duration_ms"],
      "properties": {
        "reason": {
          "type": "string",
          "enum": ["completed", "timeout", "error", "cancelled"]
        },
        "duration_ms": {
          "type": "integer",
          "minimum": 0
        },
        "action_count": {
          "type": "integer",
          "minimum": 0
        },
        "error": { "type": "string" }
      }
    },
    "CARPRequestPayload": {
      "type": "object",
      "required": ["request_id", "operation", "goal"],
      "properties": {
        "request_id": { "type": "string", "format": "uuid" },
        "operation": { "type": "string" },
        "goal": { "type": "string" },
        "atlas_ids": {
          "type": "array",
          "items": { "type": "string" }
        }
      }
    },
    "CARPResolutionPayload": {
      "type": "object",
      "required": ["resolution_id", "decision_type", "allowed_count", "denied_count"],
      "properties": {
        "resolution_id": { "type": "string", "format": "uuid" },
        "request_id": { "type": "string", "format": "uuid" },
        "decision_type": {
          "type": "string",
          "enum": ["allow", "deny", "partial", "requires_approval"]
        },
        "allowed_count": { "type": "integer", "minimum": 0 },
        "denied_count": { "type": "integer", "minimum": 0 },
        "context_block_count": { "type": "integer", "minimum": 0 },
        "ttl_seconds": { "type": "integer", "minimum": 0 }
      }
    },
    "ActionRequestedPayload": {
      "type": "object",
      "required": ["action_id"],
      "properties": {
        "action_id": { "type": "string" },
        "resolution_id": { "type": "string", "format": "uuid" },
        "parameters_hash": { "type": "string" }
      }
    },
    "ActionExecutedPayload": {
      "type": "object",
      "required": ["action_id", "execution_id", "duration_ms"],
      "properties": {
        "action_id": { "type": "string" },
        "execution_id": { "type": "string", "format": "uuid" },
        "resolution_id": { "type": "string", "format": "uuid" },
        "duration_ms": { "type": "integer", "minimum": 0 },
        "result_hash": { "type": "string" }
      }
    },
    "ActionDeniedPayload": {
      "type": "object",
      "required": ["action_id", "reason"],
      "properties": {
        "action_id": { "type": "string" },
        "reason": { "type": "string" },
        "policy_id": { "type": "string" }
      }
    },
    "ActionFailedPayload": {
      "type": "object",
      "required": ["action_id", "error_code", "error_message"],
      "properties": {
        "action_id": { "type": "string" },
        "execution_id": { "type": "string", "format": "uuid" },
        "error_code": { "type": "string" },
        "error_message": { "type": "string" },
        "duration_ms": { "type": "integer", "minimum": 0 }
      }
    },
    "PolicyEvaluatedPayload": {
      "type": "object",
      "required": ["policy_id", "result"],
      "properties": {
        "policy_id": { "type": "string" },
        "result": {
          "type": "string",
          "enum": ["allow", "deny", "not_applicable"]
        },
        "action_id": { "type": "string" },
        "evaluation_ms": { "type": "number" }
      }
    },
    "PolicyViolatedPayload": {
      "type": "object",
      "required": ["policy_id", "violation_type"],
      "properties": {
        "policy_id": { "type": "string" },
        "violation_type": {
          "type": "string",
          "enum": ["rate_limit", "budget", "denied_action", "invalid_parameters", "unauthorized"]
        },
        "details": { "type": "object" },
        "action_id": { "type": "string" }
      }
    },
    "ContextInjectedPayload": {
      "type": "object",
      "required": ["block_id", "source"],
      "properties": {
        "block_id": { "type": "string" },
        "source": { "type": "string" },
        "content_type": { "type": "string" },
        "token_count": { "type": "integer", "minimum": 0 },
        "priority": { "type": "integer" }
      }
    }
  },
  "additionalProperties": false
}
