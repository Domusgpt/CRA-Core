{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://cra.dev/schemas/carp-request.schema.json",
  "title": "CARP Request",
  "description": "Context & Action Resolution Protocol request object",
  "type": "object",
  "required": [
    "carp_version",
    "request_id",
    "timestamp",
    "operation",
    "requester",
    "task"
  ],
  "properties": {
    "carp_version": {
      "type": "string",
      "const": "1.0",
      "description": "CARP protocol version"
    },
    "request_id": {
      "type": "string",
      "format": "uuid",
      "description": "UUIDv7 unique to this request"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp with timezone"
    },
    "operation": {
      "type": "string",
      "enum": ["resolve", "execute", "validate"],
      "description": "Type of CARP operation"
    },
    "requester": {
      "$ref": "#/$defs/Requester"
    },
    "task": {
      "$ref": "#/$defs/Task"
    },
    "execution": {
      "$ref": "#/$defs/Execution",
      "description": "Required when operation is 'execute'"
    },
    "atlas_ids": {
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^[a-z][a-z0-9]*(\\.[a-z][a-z0-9-]*)+$"
      },
      "description": "Specific Atlas IDs to query"
    },
    "context": {
      "type": "object",
      "additionalProperties": true,
      "description": "Additional context key-value pairs"
    }
  },
  "$defs": {
    "Requester": {
      "type": "object",
      "required": ["agent_id", "session_id"],
      "properties": {
        "agent_id": {
          "type": "string",
          "minLength": 1,
          "maxLength": 255,
          "description": "Identifier for the requesting agent"
        },
        "session_id": {
          "type": "string",
          "format": "uuid",
          "description": "UUIDv7 for the current session"
        },
        "parent_session_id": {
          "type": ["string", "null"],
          "format": "uuid",
          "description": "Parent session for nested agents"
        }
      },
      "additionalProperties": false
    },
    "Task": {
      "type": "object",
      "required": ["goal"],
      "properties": {
        "goal": {
          "type": "string",
          "minLength": 1,
          "maxLength": 10000,
          "description": "Natural language description of intent"
        },
        "risk_tier": {
          "type": "string",
          "enum": ["low", "medium", "high", "critical"],
          "default": "low",
          "description": "Risk classification for this task"
        },
        "context_hints": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Hints for context selection"
        },
        "required_capabilities": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Required capability identifiers"
        }
      },
      "additionalProperties": false
    },
    "Execution": {
      "type": "object",
      "required": ["resolution_id", "action_id", "parameters"],
      "properties": {
        "resolution_id": {
          "type": "string",
          "format": "uuid",
          "description": "Resolution that authorized this action"
        },
        "action_id": {
          "type": "string",
          "pattern": "^[a-z][a-z0-9]*(\\.[a-z][a-z0-9]*)+$",
          "description": "Action to execute"
        },
        "parameters": {
          "type": "object",
          "description": "Action parameters"
        },
        "idempotency_key": {
          "type": ["string", "null"],
          "maxLength": 255,
          "description": "Key for idempotent execution"
        }
      },
      "additionalProperties": false
    }
  },
  "allOf": [
    {
      "if": {
        "properties": {
          "operation": { "const": "execute" }
        }
      },
      "then": {
        "required": ["execution"]
      }
    }
  ],
  "additionalProperties": false
}
